<div class="bg-gray-100 min-h-screen">
  <div class="container mx-auto py-8">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-md mx-auto">
      <h2 class="text-2xl font-bold mb-6 text-center">プロフィール編集</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :name, "ユーザー名", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "新しいパスワード", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          <p class="text-gray-600 text-xs italic mt-1">変更しない場合は空欄のままにしてください</p>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <%= f.fields_for :profile do |profile_fields| %>
          <div class="mb-4">
            <%= profile_fields.label :username, "ユーザー名", class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= profile_fields.text_field :username, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>

          <div class="mb-4">
            <%= profile_fields.label :avatar, "プロフィール画像", class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= profile_fields.file_field :avatar, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            <% if current_user.profile.avatar.attached? %>
              <%= image_tag current_user.profile.avatar, class: "mt-2 rounded-full", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% end %>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :current_password, "現在のパスワード", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          <p class="text-gray-600 text-xs italic mt-1">変更を確認するために現在のパスワードが必要です</p>
        </div>

        <div class="flex items-center justify-between mt-6">
          <%= link_to "戻る", :back, class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          <%= f.submit "保存", class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
