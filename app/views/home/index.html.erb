<div class="flex h-screen bg-gray-100">
  <!-- サイドバー -->
  <div class="w-64 bg-white shadow-md overflow-y-auto">
    <div class="p-4">
      <h1 class="text-2xl font-semibold text-gray-800"><%= current_user.name %></h1>
    </div>
    <nav class="mt-4">
      <%= link_to '#', class: "block py-2 px-4 text-gray-700 hover:bg-gray-200" do %>
        <i class="fas fa-user mr-2"></i> プロフィール
      <% end %>
      <%= link_to new_message_path, class: "block py-2 px-4 text-gray-700 hover:bg-gray-200" do %>
        <i class="fas fa-plus-circle mr-2"></i> メッセージの作成
      <% end %>
      <%= link_to '#', class: "block py-2 px-4 text-gray-700 hover:bg-gray-200" do %>
        <i class="fas fa-search mr-2"></i> メッセージの検索
      <% end %>
      <%= link_to '#', class: "block py-2 px-4 text-gray-700 hover:bg-gray-200" do %>
        <i class="fas fa-paint-brush mr-2"></i> 木のカスタマイズ
      <% end %>
    </nav>
  </div>

  <!-- メインコンテンツ -->
  <div class="flex-1 p-10 overflow-y-auto">
    <h2 class="text-3xl font-bold mb-6">あなたの感謝の木</h2>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <% if @tree && @tree.svg_data.present? %>
          <div class="tree-container" style="width: 400px; height: 400px; margin: auto; data-controller="tree"">
            <%= @tree.svg_data.html_safe %>
          </div>
          <p class="mt-4 text-lg">現在の成長段階: <%= t("tree.stages.#{@current_stage}") %></p>
        <% else %>
          <p class="text-gray-600">まだメッセージがありません。新しいメッセージを作成して、木を成長させましょう。</p>
        <% end %>
    </div>
    <%= link_to '新しいメッセージを作成', new_message_path, class: 'mt-4 inline-block bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded' %>
    <p class="mt-4 text-lg">メッセージ数: <%= @messages&.count || 0 %></p>
  </div>
</div>

