<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6 text-center">メッセージの詳細</h1>
    
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">タイトル</h2>
      <p class="w-full p-2 border rounded"><%= @message.title %></p>
    </div>
    
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">内容</h2>
      <p class="w-full p-2 border rounded min-h-[100px]"><%= @message.content %></p>
    </div>
    
    <div class="text-right text-sm text-gray-500 mb-6">
      投稿日時: <%= @message.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </div>
    
    <div class="flex justify-between">
      <%= link_to "戻る", :back, class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      <% if @message.user == current_user %>
        <%= link_to "編集", edit_message_path(@message), class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded text-lg" %>
        <%= button_to "削除", message_path(@message), method: :delete, data: { confirm: "削除しますか？" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      <% end %>
    </div>
  </div>
</div>