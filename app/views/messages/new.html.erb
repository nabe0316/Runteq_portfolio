<div class="container mx-auto mt-8 px-4">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6 text-center">メッセージの作成</h1>

    <%= form_with(model: @message, local: true) do |form| %>
      <% if @message.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2 class="font-bold mb-2">
            <%= t("errors.template.header", count: @message.errors.count, model: Message.model_name.human) %>
          </h2>
          <ul class="list-disc list-inside">
            <% @message.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, "タイトル", class: "block text-xl font-semibold mb-2" %>
        <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= form.label :content, "内容", class: "block text-xl font-semibold mb-2" %>
        <%= form.text_area :content, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex justify-center">
        <%= form.submit "作成", class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded focus:outline-none focus:shadow-outline text-lg" %>
      </div>
    <% end %>
  </div>
</div>
