<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-bold mb-6 text-center">メッセージの作成</h1>

  <%= form_with(model: @message, local: true, class: "max-w-lg mx-auto") do |f| %>
    <% if @message.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>
        <ul>
          <% @message.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :title, "タイトル", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.label :content, "内容", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_area :content, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "作成", class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'ホームに戻る', home_path, class: "inline-block align-baseline font-bold text-sm text-teal-500 hover:text-teal-800" %>
    </div>
  <% end %>
</div>
