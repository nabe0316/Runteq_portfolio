<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">メッセージを検索する</h1>

  <%= search_form_for @q, url: messages_path, method: :get, class: "mb-8" do |f| %>
    <div class="mb-4">
      <%= f.search_field :title_or_content_cont, placeholder: "タイトルまたは内容で検索", class: "w-full p-2 border rounded" %>
    </div>
    <%= f.submit "検索", class: "bg-teal-600 text-white px-4 py-2 rounded hover:bg-teal-700" %>
  <% end %>

  <h2 class="text-xl font-semibold mb-4">検索結果一覧</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @messages.each do |message| %>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold"><%= message.title %></h3>
        <p class="text-sm text-gray-600 mb-2"><%= truncate(message.content, length: 100) %></p>
        <p class="text-xs text-gray-500">作成日: <%= message.created_at.strftime("%Y/%m/%d") %></p>
        <%= link_to "詳細", message_path(message), class: "text-teal-600 hover:underline" %>
      </div>
    <% end %>
  </div>

  <%= link_to "戻る", home_path, class: "mt-8 inline-block bg-teal-600 text-white px-4 py-2 rounded hover:bg-teal-700" %>
</div>