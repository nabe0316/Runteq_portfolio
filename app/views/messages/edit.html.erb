<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6 text-center">メッセージの編集</h1>
    
    <%= form_with(model: @message, local: true) do |form| %>
      <div class="mb-4">
        <%= form.label :title, "メッセージのタイトル", class: "block text-xl font-semibold mb-2" %>
        <%= form.text_field :title, class: "w-full p-2 border rounded" %>
      </div>
      
      <div class="mb-4">
        <%= form.label :content, "内容", class: "block text-xl font-semibold mb-2" %>
        <%= form.text_area :content, rows: 5, class: "w-full p-2 border rounded min-h-[100px]" %>
      </div>
      
      <div class="text-right text-sm text-gray-500 mb-6">
        投稿日時: <%= @message.created_at.strftime("%Y年%m月%d日 %H:%M") %>
      </div>
      
      <div class="flex justify-between">
        <%= link_to "戻る", message_path(@message), class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded text-lg" %>
        <%= form.submit "更新", class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-3 px-6 rounded text-lg" %>
      </div>
    <% end %>
  </div>
</div>