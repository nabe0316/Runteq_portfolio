<% flash.each do |type, message| %>
  <% if message.is_a?(String) %>
    <div class="<%= flash_class(type) %> px-4 py-3 rounded relative mb-4 transform transition-all duration-300 ease-in-out" 
         role="alert"
         data-controller="flash"
         data-flash-target="message">
      <div class="flex items-center">
        <div class="py-1">
          <%= flash_icon(type) %>
        </div>
        <div class="ml-3">
          <p class="text-sm"><%= message %></p>
        </div>
      </div>
      <button class="absolute top-0 bottom-0 right-0 px-4 py-3" data-action="click->flash#close">
        <svg class="fill-current h-6 w-6 text-gray-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <title>Close</title>
          <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
        </svg>
      </button>
    </div>
  <% end %>
<% end %>